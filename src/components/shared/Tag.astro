---
interface Props {
  label: string;
  variant?: 'default' | 'signal-red' | 'signal-cyan' | 'signal-violet' | 'signal-yellow' | 'signal-orange';
  href?: string;
}

const { label, variant = 'default', href } = Astro.props;

const variantClass = variant !== 'default' ? `tag--${variant}` : '';
const Tag = href ? 'a' : 'span';
---

<Tag class:list={["tag", variantClass]} href={href}>
  <span class="tag__indicator" aria-hidden="true"></span>
  {label}
</Tag>
