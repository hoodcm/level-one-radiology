---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Level One Radiology">
  <main class="container" style="min-height: 100vh; display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <p class="type-ui" style="margin-bottom: var(--space-3);">Coming Soon</p>
    <h1 class="type-display-l" style="text-align: center; max-width: 40rem; margin-bottom: var(--space-3);">
      Level One Radiology
    </h1>
    <p class="type-body-secondary" style="text-align: center; max-width: 32rem; margin-bottom: var(--space-5);">
      Independent emergency radiology publication. Timely coverage meets educational rigor.
    </p>
    <div style="width: 3rem; height: 2px; background: var(--color-signal-red);"></div>
  </main>
</Layout>
